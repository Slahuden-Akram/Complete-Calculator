<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="70"
        android:weightSum="20">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="70"
            android:textColor="@color/white"
            android:background="@color/black"
            android:gravity="center"
            android:textSize="40sp"
            android:inputType="textPersonName"
            android:text="0"/>
<!--        <TextView-->
<!--            android:id="@+id/txtCalc"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="10"-->
<!--            android:background="@color/black"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="30sp"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="right"-->
<!--            android:padding="30dp"/>-->
<!--        <TextView-->
<!--            android:id="@+id/txtResult"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="10"-->
<!--            android:background="@color/black"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="30sp"-->
<!--            android:gravity="right"-->
<!--            android:padding="30dp"-->
<!--            />-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:weightSum="30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="#191616"
            android:orientation="vertical"
            android:weightSum="40">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="30">

                <Button
                    android:id="@+id/btn7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="7"
                    android:onClick="numberEvent"
                    android:textSize="20sp"/>

                <Button
                    android:id="@+id/btn8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="8"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="9"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="30">

                <Button
                    android:id="@+id/btn4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="4"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="5"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="6"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="30">

                <Button
                    android:id="@+id/btn1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="1"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="2"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="3"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="horizontal"
                android:weightSum="30">

                <Button
                    android:id="@+id/btnDot"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="."
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btn0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="0"
                    android:textSize="20sp"
                    android:onClick="numberEvent"/>

                <Button
                    android:id="@+id/btnEqual"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:backgroundTint="#191616"
                    android:text="="
                    android:textSize="20sp"
                    android:onClick="EqualEvent"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:weightSum="10"
            android:background="#3A3737"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#3A3737"
                android:text="DEL"
                android:textSize="20sp"
                android:onClick="ClearEvent"
                />
            <Button
                android:id="@+id/btnDivide"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#3A3737"
                android:text="/"
                android:textSize="20sp"
                android:onClick="OperationEvent"
                />
            <Button
                android:id="@+id/btnMultiply"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#3A3737"
                android:text="X"
                android:textSize="20sp"
                android:onClick="OperationEvent"
                />
            <Button
                android:id="@+id/btnSubtract"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#3A3737"
                android:text="-"
                android:textSize="20sp"
                android:onClick="OperationEvent"
                />
            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:backgroundTint="#3A3737"
                android:text="+"
                android:textSize="20sp"
                android:onClick="OperationEvent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#FF9800"
            />

    </LinearLayout>

</LinearLayout>